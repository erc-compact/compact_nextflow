//Pipeline defaults
params {

// Peasoup
    min_snr = "8.0"
    acc_start = "-10.0"
    acc_end = "10.0"
    ram_limit_gb = "60.0"
    nh = "4"
    ngpus = "1"
    total_cands_limit = "100000"
    fft_size = "67108864"
    dm_file = "${baseDir}/dm_file.txt"
    fil_files = "${baseDir}/*.fil"



// Filtool

    telescope = "meerkat"

// rfifind

    rfifind_time = "2.2"
    rfifind_freqsig = "3.0"
    rfifind_timesig = "10.0"
    rfifind_intfrac = "0.3"
    rfifind_chanfrac = "0.7"
    rfifind_nthreads = "4"
    

// folding 
  
    fold_script = "${baseDir}/fold_peasoup_candidates.py"
    pulsarx_fold_template = "${baseDir}/meerkat_fold.template"
    

}

profiles {
   hercules {
    includeConfig 'hercules.config'
  }
  ozstar {
    includeConfig 'ozstar.config'
  }
  }


